<% layout('layout/boilerplate.ejs') %>
<div class="container">
  <div style="height: 100vh; color: white">
    <div class="row" style="margin-bottom: 40px">
      <div class="container baap">
        <div class="insideContainer">
          <form
            class="needs-validation"
            action="/register"
            method="post"
            novalidate
          >
            <div class="container whitebox">
              <div class="border-login">
                <img
                  src="/images/white.png"
                  class="whitebg"
                  alt=""
                  height="530px"
                  width="450px"
                />
              </div>

              <div class="bada-register">
                <h1 class="text-center head">REGISTER</h1>
                <div class="mb-3 inputs" style="text-align: left;">
                  <label
                    class="form-label auth"
                    for="username"
                    >USERNAME</label
                  ><br />
                  <input
                    type="text"
                    name="username"
                    style="color: rgb(255, 255, 255)"
                    id="username"
                    placeholder="Username"
                    required
                  /><br />
                  <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3 inputs"style="text-align: left;">
                  <label
                    class="form-label auth"
                    for="email"
                    >E-MAIL</label
                  ><br />
                  <input
                    type="text"
                    name="email"
                    style="color: rgb(255, 255, 255)"
                    id="email"
                    placeholder="E-mail"
                    required
                  /><br />
                  <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3 inputs" style="text-align: left;">
                  <label
                    for="password"
                    class="form-label auth"
                    >PASSWORD</label
                  ><br />
                  <input
                    type=" text"
                    name="password"
                    style="color: rgb(255, 255, 255)"
                    id="password"
                    placeholder="Password"
                    required
                  /><br /><br />
                  <div class="valid-feedback">Looks good!</div>
                  <button class="button" type="submit">SUBMIT</button>
                </div>
              </div>
            </div>

            <br />
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
